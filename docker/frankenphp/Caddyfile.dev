{
	frankenphp
	admin off
	auto_https off
}

:80 {
	handle /health {
		respond "OK" 200
	}

	handle {
		root * /app/public
		php_server {
			watch /app/app/**/*.php
			watch /app/config/**/*.php
			watch /app/resources/views/**/*.blade.php
			watch /app/routes/**/*.php
			watch /app/public/**/*.css
			watch /app/public/**/*.js
		}
	}
}

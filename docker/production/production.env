# Production environment configuration for planka-mcp
# Copy this file to .env.production and fill in the values
#
# Generate APP_KEY with: php artisan key:generate --show

APP_NAME="Planka MCP"
APP_ENV=production
APP_DEBUG=false

LOG_CHANNEL=stack
LOG_LEVEL=warning

SESSION_DRIVER=redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
